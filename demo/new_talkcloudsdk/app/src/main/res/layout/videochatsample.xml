<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#FFF"
    android:id="@+id/rl_video"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/local_video_view_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_action_bar_splitter"
        android:orientation="horizontal">
    </LinearLayout>
    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:background="#00000000"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_switch"
            android:src="@mipmap/switchqh"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <ImageView
            android:id="@+id/iv_av"
            android:layout_marginTop="10dp"
            android:src="@mipmap/av"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <ImageView
            android:id="@+id/iv_disting"
            android:layout_marginTop="10dp"
            android:src="@mipmap/disting"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <ImageView
            android:id="@+id/iv_hands"
            android:layout_marginTop="10dp"
            android:src="@mipmap/hands"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <ImageView
            android:id="@+id/iv_message"
            android:layout_marginTop="10dp"
            android:src="@mipmap/message_default"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/button_ll"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="3dp"
        android:background="#00000000"
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_camer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/cameraoff" />

        <ImageView
            android:id="@+id/iv_mute"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/mute" />

        <ImageView
            android:id="@+id/iv_finsh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/btn_end_call" />

    </LinearLayout>

    <LinearLayout
        android:layout_above="@+id/button_ll"
        android:id="@+id/remote_video_view_container"
        android:layout_width="match_parent"
        android:layout_height="80dp"

        android:padding="5dp"
        android:orientation="horizontal">
    </LinearLayout>



</RelativeLayout>
